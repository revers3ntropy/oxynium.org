#!/bin/bash

bin/build-docs

if test -d "./public_html"; then
    echo "./public_html exists and must be deleted"
    exit 1
fi

mkdir -p ./public_html/docs
cp -r ./docs/book/* ./public_html/docs/
cp -r ./src/* ./public_html/

sshpass -f './secrets/sshpass.txt' scp -rp ./public_html oxynium@oxynium.org:~/

# rm -rf ./public_html